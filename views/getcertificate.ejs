        <hr width="100%">
        <div class="container">
            <button onclick="print(5)">Download Certificate</button>
        </div>
        <hr width="100%">
        <script src='js/dist/jspdf.min.js'></script>
        <script>
        
            function print() {
              const filename  = 'PrintCertificate.pdf';
              
              html2canvas(document.querySelector('#certificateDownload')).then(canvas => {
                var pdf = new jsPDF({
                    orientation: 'landscape',
                    unit: 'in',
                    format: [4, 2]
                  })
                pdf.addImage(canvas.toDataURL('image/png'), 'PNG', 100, 200, 360,460);
                pdf.save(filename);
              });
            }
          
          // Variant
          // This one lets you improve the PDF sharpness by scaling up the HTML node tree to render as an image before getting pasted on the PDF.
          function print(quality) {
              const filename  = 'QualityCertificate.pdf';
              
              html2canvas(document.querySelector('#certificateDownload'), 
                          {scale: quality}
                       ).then(canvas => {
                let pdf = new jsPDF('l', 'mm', 'a4');
                pdf.addImage(canvas.toDataURL('image/png'), 'PNG', 5,5,288,198);
                pdf.save(filename);
              });
            }
        </script>
